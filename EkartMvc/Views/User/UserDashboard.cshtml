@{
    ViewData["Title"] = "User Dashboard";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        nav {
            background-color: #4CAF50;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

            nav ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            nav li {
                display: inline;
                margin-right: 20px;
            }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            padding: 20px;
        }

        .profile {
            flex: 1;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .profile img {
                width: 100px;
                height: 100px;
                border-radius: 50%;
                margin-bottom: 10px;
            }

            .profile h2 {
                margin-bottom: 5px;
            }

            .profile p {
                color: #555;
            }

        .notifications {
            flex: 1;
            background-color: #fff;
            padding: 20px;
            margin-left: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .notifications h2 {
                margin-bottom: 10px;
            }

        .notification-item {
            margin-bottom: 10px;
        }

        .content {
            flex: 2;
            background-color: #fff;
            padding: 20px;
            margin-left: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>

    <header>
        <h1>User Dashboard</h1>
    </header>

    <nav>
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">Profile</a></li>
            <li><a href="#">Messages</a></li>
            <li><a href="#">Settings</a></li>
            <li><a href="#">Logout</a></li>
        </ul>
    </nav>

    <div class="container">
        <div class="profile">
            <img src="https://placekitten.com/100/100" alt="User Profile Picture">
            <h2>User Name</h2>
            <p>Email: user@example.com</p>
            <p>Location: City, Country</p>
        </div>

        <div class="notifications">
            <h2>Notifications</h2>
            <div class="notification-item">New message from John Doe</div>
            <div class="notification-item">You have 3 new friend requests</div>
            <div class="notification-item">Event reminder: Meeting at 2 PM</div>
        </div>

        <div class="content">
            <h2>Welcome to your Dashboard!</h2>
            <p>This is the main content area where you can display various functionalities, updates, and information relevant to the user.</p>
        </div>
    </div>

    <footer>
        &copy; 2023 Your Company
    </footer>

</body>

</html>

